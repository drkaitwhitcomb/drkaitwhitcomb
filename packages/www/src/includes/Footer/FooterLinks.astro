---
import FooterLink from "./FooterLink.astro";
import type { Props as FooterLinkProps } from "./FooterLink.astro";

export interface Props {
  links: FooterLinkProps[];
}

const styles = `flex flex-wrap items-center mt-3 text-sm font-medium text-gray-500 dark:text-white sm:mt-0`;

const { links } = Astro.props;
---

<ul class:list={styles}>
  {
    links
      ? links?.map((link: any) => (
          <FooterLink name={link.name} url={link.url} />
        ))
      : null
  }
</ul>
