---
import PageLayout from "./PageLayout.astro";
import Header from "@/includes/Header/Header.astro";
import Footer from "@/includes/Footer/Footer.astro";
import Navigator from "@/includes/Navigator/Navigator";
import Masonry from "@/components/Masonry/Masonry";

import { useConfiguration } from "@/hooks/useConfiguration";

export interface Props {
  title: string;
  description?: string;
  masonry?: any;
}

const { footer, header } = useConfiguration();

const { title, description, masonry } = Astro.props;
---

<PageLayout title={title} description={description}>
  <Header slot="header" {...header} />
  {masonry ? (
    <Masonry client:load slot="main" masonry={masonry} />
  ) : (
    <slot name="main" />
  )}
  <Navigator slot="navigator" client:load />
  <Footer slot="footer" {...footer} />
  <slot name="debug" />
</PageLayout>
